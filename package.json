{
  "name": "telegram-botbuilder",
  "version": "2.0.2",
  "description": "Declarative dialog-based Telegram bot framework for Node.js",
  "type": "module",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "require": "./lib/index.js",
      "import": "./lib/index.js",
      "default": "./lib/index.js"
    }
  },
  "files": [
    "lib",
    "README.md",
    "CHANGELOG.md",
    "MIGRATION.md"
  ],
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "clean": "rm -rf lib",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "telegram",
    "bot",
    "telegram-bot",
    "botbuilder",
    "dialog",
    "declarative",
    "typescript"
  ],
  "author": "zxcpadik",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zxcpadik/telegram-botbuilder.git"
  },
  "bugs": {
    "url": "https://github.com/zxcpadik/telegram-botbuilder/issues"
  },
  "homepage": "https://github.com/zxcpadik/telegram-botbuilder#readme",
  "dependencies": {
    "node-telegram-bot-api": "^0.67.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/node-telegram-bot-api": "^0.64.13",
    "typescript": "^5.6.0"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  }
}
